[
  {
    "name": "files",
    "type": "video",
    "label": "Video files",
    "description": "Supported formats are webm, mp4 and ogv."
  },
  {
    "name": "fitToWrapper",
    "type": "boolean",
    "label": "Fit to wrapper",
    "default": true,
    "descriptions": "Adjust video size to use available space"
  },
  {
    "name": "controls",
    "type": "boolean",
    "label": "Enable controls",
    "default": true,
    "description": "Controls allow the user to for instance pause the video"
  },
  {
    "name": "autoplay",
    "type": "boolean",
    "label": "Enable autoplay",
    "description": "With autoplay the video starts to play immediately. If autoplay is disabled the user presses a play button to start the video. Note that autoplay does not work on mobile devices."
  },
  {
    "name": "copyright",
    "type": "group",
    "label": "Copyright information",
    "fields": [
      {
        "name": "title",
        "type": "text",
        "label": "Title",
        "placeholder": "City Lights",
        "optional": true
      },
      {
        "name": "author",
        "type": "text",
        "label": "Author",
        "placeholder": "Sir Charles Chaplin",
        "optional": true
      },
      {
        "name": "source",
        "type": "text",
        "label": "Source",
        "placeholder": "http://en.wikipedia.org/wiki/Charlie_Chaplin#City_Lights",
        "optional": true,
        "regexp": {
          "pattern": "^http[s]?://.+",
          "modifiers": "i"
        }
      },
      {
        "name": "license",
        "type": "select",
        "label": "License",
        "default": "U",
        "options": [
          {
            "value": "U",
            "label": "Undisclosed"
          },
          {
            "value": "CC BY",
            "label": "Attribution"
          },
          {
            "value": "CC BY-SA",
            "label": "Attribution-ShareAlike"
          },
          {
            "value": "CC BY-ND",
            "label": "Attribution-NoDerivs"
          },
          {
            "value": "CC BY-NC",
            "label": "Attribution-NonCommercial"
          },
          {
            "value": "CC BY-NC-SA",
            "label": "Attribution-NonCommercial-ShareAlike"
          },
          {
            "value": "CC BY-NC-ND",
            "label": "Attribution-NonCommercial-NoDerivs"
          },
          {
            "value": "GNU GPL",
            "label": "General Public License"
          },
          {
            "value": "PD",
            "label": "Public Domain"
          },
          {
            "value": "ODC PDDL",
            "label": "Public Domain Dedication and Licence"
          },
          {
            "value": "CC PDM",
            "label": "Public Domain Mark"
          },
          {
            "value": "C",
            "label": "Copyright"
          }
        ]
      }
    ]
  },
  {
    "name": "contentName",
    "type": "text",
    "label": "Video content name",
    "common": true,
    "default": "Video"
  }
]